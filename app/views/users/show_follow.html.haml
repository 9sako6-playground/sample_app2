- provide(:title, @title)
.row
  %aside
    %section
      = gravatar_for @user
      %h1= @user.name
      %span= link_to('view my profile', @user)
      %span
        %b Microposts: 
        = @user.microposts.count
    %section
      = render('shared/stats')
      - if @users.any?
        %span
          - @users.each do |user|
            = link_to(gravatar_for(user, size: 30), user)
  %div
    %h3= @title
    - if @users.any?
      %ul
        = render @users
      = paginate(@users)
